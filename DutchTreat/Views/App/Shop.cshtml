<!-- With the model tag I can bind my viewmodel class to the form; this also enables Intellisense -->
<!-- Add a using statement in the _ViewImports.cshtml to be able to use "Products" -->
<!-- Declaring the model allows to check if the properties like e.g. "title" are correctly used; 
    Otherwise it will be dynamically loaded at runtime and runtime errors might occur -->
@model IEnumerable<Product>

<h1>Shop</h1>
<p>Count: @Model.Count()</p>
@foreach (var p in Model)
{
    <div class="col-md-3">
        <div class="well well-sm">
            <img src="~/img/@(p.ArtId).jpg" class="img-responsive" alt="@p.Title" />
            <h3>@p.Category - @p.Size</h3>
            <ul class="product-props">
                <li>Price: @p.Price</li>
                <li>Artist: @p.Artist</li>
                <li>Title: @p.Title</li>
                <li>Description: @p.ArtDescription</li>
            </ul>
            <button id="buyButton">Buy</button>
        </div>
    </div>
}
