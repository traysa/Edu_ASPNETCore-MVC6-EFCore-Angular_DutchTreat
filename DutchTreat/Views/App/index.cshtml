@* Razor code: View for the Index action in the AppController*@

@{ 
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat: @ViewBag.Title</title>
    @* In razor you use ~/ for directing to the wwwroot folder *@
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <div class="product-info">
        <img src="~/img/pic1.gif" />
        <h3>Mug</h3>
        <ul class="product-props">
            <li>Price:9.99$</li>
            <li>Artist: uzuih</li>
            <li>Title: </li>
            <li>Description: uefziewui</li>
        </ul>
        <button id="buyButton">Buy</button>
    </div>
    <div id="theForm">
        <form>
            <label>Your Name:</label>
            <br />
            <input />
            <br />
            <label>Email:</label>
            <br />
            <input type="email" />
            <br />
            <label>Subject:</label>
            <br />
            <input type="text" />
            <br />
            <label>Message:</label>
            <br />
            <textarea rows="4"></textarea>
            <br />
            <input type="submit" value="Send Message" />
        </form>
    </div>

    <div>
        <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input />
            </div>
            <div>
                <label>Password</label>
                <input type="password" />
            </div>
            <div>
                <input type="checkbox" />
                <label>Remember Me?</label>
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>

    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>

</body>
</html>